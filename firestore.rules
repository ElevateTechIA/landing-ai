rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Meetings: Solo acceso desde el servidor (Firebase Admin SDK)
    match /meetings/{meetingId} {
      allow read, write: if false;
    }
    
    // Blocked dates: Solo acceso desde el servidor
    match /blockedDates/{dateId} {
      allow read, write: if false;
    }
    
    // Availability slots: Solo acceso desde el servidor
    match /availabilitySlots/{slotId} {
      allow read, write: if false;
    }

    // Social Media: Solo acceso desde el servidor (Firebase Admin SDK)
    match /socialMediaUsers/{userId} {
      allow read, write: if false;
    }

    match /socialAccounts/{accountId} {
      allow read, write: if false;
    }

    match /socialPosts/{postId} {
      allow read, write: if false;

      match /publishLogs/{logId} {
        allow read, write: if false;
      }
    }

    match /scheduledJobs/{jobId} {
      allow read, write: if false;
    }
  }
}
